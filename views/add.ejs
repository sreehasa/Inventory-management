<html lang="en">
<head>
    <title>Tanishq Store</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <link rel="stylesheet" href="styles.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="plugins/fontawesome-free/css/all.min.css">
  <!-- Theme style -->
    <link rel="stylesheet" href="dist/css/adminlte.min.css">
  <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>

<body>

    <div>
		
	<!-- Navbar -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
         
            <a href="/" class="brand-link">
              <span class="brand-text font-weight-light">Tanishq</span>
            </a> 
                <!-- Sidebar -->
                <div class="sidebar">
                
                </div>
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                      <li class="nav-item">
                        <a href="/create" class="nav-link">
                          <i class="nav-icon far fa-circle text-info"></i>
                          <p>Add Product</p>
                        </a>
                      </li>
                      
                      <li class="nav-item">
                        <a href="/updatestock" class="nav-link">
                          <i class="nav-icon far fa-circle "></i>
                          <p class="text">Update Stock</p>
                        </a>
                      </li>
                      
                      <li class="nav-item">
                        <a href="/deleteproduct" class="nav-link">
                          <i class="nav-icon far fa-circle "></i>
                          <p class="text">Delete Product</p>
                        </a>
                      </li>
                    </ul>
                </nav>
                <!-- /.sidebar -->
            </aside>
            
            <!-- Add content -->
            <div class="content-wrapper">
                
                <section class="content-header">
                    <h1>Tanishq Inventory Management</h1>
                </section>

                <div class="card">
                    <div class="card-header">
            <h4 class="c1">Add a new Product</h4>

            <form action="/AddData" method="POST">
              <div class="form-group">
                <label for="pid">Product ID: </label>
                <input type="number" class="form-control" id="pid" name="pid" placeholder="Enter product ID">
              </div>

              <div class="form-group">
                <label for="category">Product Category:</label>
                <input type="text" class="form-control" id="category" name="category" placeholder="Enter category">
              </div>

              <div class="form-group">
                <label for="type">Type of the Product:</label>
                <input type="text" class="form-control" id="type" name="type" placeholder="Enter type">
              </div>

              <div class="form-group">
                <label for="size">Size:</label>
                <input type="text" class="form-control" id="size" name="size" placeholder="Enter size">
              </div>

              <div class="form-group">
                <label for="stock">Stock:</label>
                <input type="number" class="form-control" id="stock" name="stock" placeholder="Enter quantity">
              </div>

              <div class="form-group">
                <label for="price">Price:</label>
                <input type="number" class="form-control" id="price" name="price" placeholder="Enter price">
              </div>

            <button type="submit" class="btn btn-dark">Submit</button>
          
        </form>
</div>
</div>
</div>
            
</body>
</html>
    
