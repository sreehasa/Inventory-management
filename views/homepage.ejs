<html lang="en">
<head>
    <title>Tanishq Store</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <link rel="stylesheet" href="styles.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="plugins/fontawesome-free/css/all.min.css">
  <!-- Theme style -->
    <link rel="stylesheet" href="dist/css/adminlte.min.css">
  <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>

<body>
    <div>		
	<!-- Navbar -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            
                <a href="/" class="brand-link">
                  <span class="brand-text font-weight-light">Tanishq</span>
                </a> 
                <!-- Sidebar -->
                <div class="sidebar">
                
                </div>
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                      <li class="nav-item">
                        <a href="/create" class="nav-link">
                          <i class="nav-icon far fa-circle "></i>
                          <p>Add Product</p>
                        </a>
                      </li>

                      <li class="nav-item">
                        <a href="/updatestock" class="nav-link">
                          <i class="nav-icon far fa-circle"></i>
                          <p class="text">Update Stock</p>
                        </a>
                      </li>

                      <li class="nav-item">
                        <a href="/deleteproduct" class="nav-link">
                          <i class="nav-icon far fa-circle "></i>
                          <p class="text">Delete Product</p>
                        </a>
                      </li>
                      
                      
                      
                    </ul>
                </nav>
                <!-- /.sidebar -->
            </aside>
            
            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                
                <section class="content-header">
                    <h1>Tanishq Inventory Management</h1>
                </section>
                <div class="card">
                    <div class="card-header">
                        
                      <h3 class="card-title"><b>Stock Details</b></h3>
                        
                      <div class="card-body table-responsive p-0" style="height: 400px;">
                        <table class="table table-striped table-head-fixed text-nowrap">
                        <thead>
                            <tr>
                                <th style="width: 10%" >Product Id</th>
                                <th style="width: 10%" >Category</th>
                                <th style="width: 10%" >Type</th>
                                <th style="width: 10%" >Size</th>
                                <th style="width: 10%" >Stock</th>
                                <th style="width: 10%" >Price</th>
                                
                            </tr>
                        </thead>
                         
                            <% for(var i=0;i<data.length;i++) {%>
                                <tr>
                                    <td><%= data[i].pid %></td>
                                    <td><%= data[i].category %></td>
                                    <td><%= data[i].type %></td>
                                    <td><%= data[i].size %></td>
                                    <td><%= data[i].stock %></td>
                                    <td><%= data[i].price %></td>
                                </tr>
                                <% } %> 
                            </tr>
                        </tbody>
                        </table>
                        </div>
              
                    </div>
                </div>
                <section class="content">
                    
                </section>
          
            </div>
            
    </div>
    

    
</body>
</html>